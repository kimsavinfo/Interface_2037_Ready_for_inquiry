<%- include partials/header.ejs %>

<div class="row">
	<div class="col-md-8">
	</div>
	<div class="col-md-4 text-right">
		<a href="/" class="btn btn-lg btn-danger">
			Log out
			<span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
		</a>
	</div>
</div>

<div class="row top-buffer">
	<form class="form-horizontal" action='/client/questions' method='POST'>
		<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">
				Question
			</label>
			<div class="col-sm-10">
				<input 
					type='text' 
					name='label'
					class="form-control"
					autocomplete='off' 
					placeholder='Entrer votre question' required
				>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<input type="hidden" name="user_id" value="<%=user_id%>">
				<button type="submit" class="btn btn-lg btn-primary btn-block">Valider</button>
			</div>
		</div>
	</form>
</div>

<div class="row top-buffer">
	<table class="table table-hover">
		<tr>
			<th>Question</th>
			<th>Etat</th>
			<th>Actions</th>
		</tr>
	 <% 
		if(!(questions == 'undefined'))
		{
		 	questions.forEach(function(question) 
		 	{ %>
				<tr>
					<td><%= question.label %></td>
					<td>
						<% if(question.status == 'active') { %>
							<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
						<% }else { %>
							<span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span>
						<% } %>
					</td>
					<td>
						<form method="post" action="/client/questions/<%=question._id%>">
							<a href="/client/<%=question.user_id%>/questions/<%=question._id%>"
								type="button" class="btn btn-default" aria-label="Left Align">
								<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
							</a>
							
							<input type="hidden" name="_method" value="delete"/>
							<input type="hidden" name="user_id" value="<%=user_id%>">
							<button type="submit" class="btn btn-default">
							 	<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
							 </button>
						</form>
					</td>
				</tr>
	<%	 	});
		} %>
	</table>
</div>

<%- include partials/footer.ejs %>