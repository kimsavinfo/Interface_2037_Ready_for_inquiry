<% include ../partials/header.ejs %>


<div class="row top-buffer">
	<form class="form-horizontal" action='/client/questions' method='POST'>
		<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">
				Question
			</label>
			<div class="col-sm-8">
				<input 
					type='text' 
					name='label'
					class="form-control"
					autocomplete='off' 
					placeholder='Entrer votre question' required
				>
			</div>
			<div class="col-sm-2">
				<button type="submit" class="btn btn-lg btn-primary btn-block">Ajouter</button>
			</div>
		</div>
	</form>
</div>

<hr>

<div class="row top-buffer">
	<form class="form-horizontal" action='/client/questions' method='GET'>
		<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">
				Rechercher
			</label>
			<div class="col-sm-8">
				<input 
					type='text' 
					name='label'
					class="form-control"
					autocomplete='off' 
					placeholder='Mots clÃ©s'
				>
			</div>
			<div class="col-sm-2">
				<button type="submit" class="btn btn-lg btn-default btn-block">
					<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
				</button>
			</div>
		</div>
	</form>
</div>

<div class="row top-buffer">
	<table class="table table-hover">
		<tr>
			<th width="80%">Question</th>
			<th width="10%">Etat</th>
			<th width="10%">Actions</th>
		</tr>
	 <% 
		if(!(questions == 'undefined'))
		{
		 	questions.forEach(function(question) 
		 	{ 
	%>
				<tr>
					<td><%= question.label %></td>
					<td>
						<% if(question.answer != '') { %>
							<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
						<% }else { %>
							<span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span>
						<% } %>
					</td>
					<td>
						<!-- <%=question.links[0].href%> -->
						<form method="post" action="/client">
							<a href="/client/questions/<%=question._id%>"
								type="button" class="btn btn-default" aria-label="Left Align">
								<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
							</a>
							
							<input type="hidden" name="_method" value="delete"/>
							<button type="submit" class="btn btn-default">
							 	<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
							 </button>
						</form>
					</td>
				</tr>
	<%	 	});
		} 
	%>
	</table>
</div>

<% include ../partials/footer.ejs %>
